<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="8dp"
        android:background="@drawable/fondo">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editText11"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:background="@drawable/fondo"
                android:allowUndo="false"
                android:autoText="false"
                android:hint="Nombres"
                android:maxLength="80"
                android:drawableLeft="@drawable/aster"
                android:drawableStart="@drawable/aster"
                android:padding="3dp"
                android:inputType="textCapWords" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" >

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editText14"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:background="@drawable/fondo"
                android:allowUndo="false"
                android:autoText="false"
                android:hint="Apellidos"
                android:maxLength="80"
                android:drawableLeft="@drawable/aster"
                android:drawableStart="@drawable/aster"
                android:padding="3dp"
                android:inputType="textCapWords" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText12"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:background="@drawable/fondo"
                android:allowUndo="false"
                android:autoText="false"
                android:hint="Cédula"
                android:maxLength="12"
                android:drawableLeft="@drawable/aster"
                android:drawableStart="@drawable/aster"
                android:padding="3dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:maxLength="100"
                android:id="@+id/correo"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:background="@drawable/fondo"
                android:allowUndo="false"
                android:autoText="false"
                android:hint="Correo"
                android:drawableLeft="@drawable/aster"
                android:drawableStart="@drawable/aster"
                android:padding="3dp"
                android:inputType="textEmailAddress" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" >

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/editText15"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:background="@drawable/fondo"
                android:allowUndo="false"
                android:autoText="false"
                android:hint="Teléfono"
                android:maxLength="15"
                android:drawableLeft="@drawable/aster"
                android:drawableStart="@drawable/aster"
                android:padding="3dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" >

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText13"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:background="@drawable/fondo"
                android:text="Fecha de nacimiento"
                android:drawableLeft="@drawable/aster"
                android:drawableStart="@drawable/aster"
                android:padding="3dp"
                android:onClick="fecha" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3.7"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="10dp">
        <Spinner
            android:layout_width="250dp"
            android:id="@+id/pregunta"
            android:clickable="true"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_height="30dp"
            android:spinnerMode="dialog"
            android:background="@drawable/fondo"
            android:visibility="gone" />

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/edpregunta"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:background="@drawable/fondo"
                android:allowUndo="false"
                android:autoText="false"
                android:hint="Pregunta Secreta"
                android:maxLength="80"
                android:drawableLeft="@drawable/aster"
                android:drawableStart="@drawable/aster"
                android:padding="3dp"
                android:inputType="textCapWords" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:ems="10"

                android:id="@+id/editText10"
                android:layout_gravity="top|center"
                android:textSize="16sp"
                android:background="@drawable/fondo"
                android:allowUndo="false"
                android:maxLength="100"
                android:autoText="false"
                android:hint="Respuesta Secreta"
                android:drawableLeft="@drawable/aster"
                android:drawableStart="@drawable/aster"
                android:padding="3dp"
                android:inputType="textCapCharacters" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:maxLength="15"
                android:id="@+id/editText8"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:background="@drawable/fondo"
                android:allowUndo="false"
                android:autoText="true"
                android:hint="Clave (6 a 15 dígitos)"
                android:drawableLeft="@drawable/aster"
                android:drawableStart="@drawable/aster"
                android:padding="3dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" >

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText4"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:background="@drawable/fondo"
                android:allowUndo="false"
                android:autoText="true"
                android:hint="Confirmar Clave"
                android:maxLength="15"
                android:drawableLeft="@drawable/aster"
                android:drawableStart="@drawable/aster"
                android:padding="3dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:layout_gravity="center"
                android:gravity="center">

                <Button
                    android:textAllCaps="false"

                    android:layout_width="120dp"
                    android:textColor="@drawable/button_back4"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Cancelar"
                    android:id="@+id/button3"
                    android:layout_gravity="center"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:layout_gravity="center"
                android:gravity="center">

                <Button
                    android:textAllCaps="false"

                    android:layout_width="120dp"

                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Guardar"
                    android:textColor="@drawable/button_back4"
                    android:id="@+id/button"
                    android:layout_gravity="center"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</ScrollView>