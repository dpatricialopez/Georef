<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:gravity="center">

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4">

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:drawableLeft="@drawable/sobre"
                android:id="@+id/cedulat"
                android:drawablePadding="8dip"
                android:paddingLeft="15dip"
                android:layout_gravity="top|center_horizontal"
                android:background="@drawable/fondo"
                android:allowUndo="false"
                android:autoText="false"
                android:hint="Correo"
                android:padding="2dp"
                android:textColor="#222222" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4" >

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:ems="20"
                android:drawableLeft="@drawable/candado"
                android:drawablePadding="8dip"
                android:paddingLeft="15dip"
                android:id="@+id/editText8"
                android:layout_gravity="top|center_horizontal"
                android:background="@drawable/fondo"
                android:allowUndo="false"
                android:autoText="true"
                android:hint="Contraseña"
                android:padding="2dp"
                android:inputType="textPassword"
                android:textColor="#222222" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Entrar"
                android:textAllCaps="false"
                android:id="@+id/button"
                android:layout_gravity="center"

                android:gravity="center_vertical|center|center_horizontal"
                android:textColor="@drawable/button_back4"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="10dp">

            <Button
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:background="#00ffffff"
                android:textColor="@drawable/button_back3"
                android:layout_height="wrap_content"
                android:text="¿Olvidaste tu contraseña?"
                android:id="@+id/button69"

                 />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3.7"
            android:gravity="clip_vertical">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="110dp"
                android:text="Crear una nueva cuenta"
                android:id="@+id/button8"
                android:textAllCaps="false"

                android:layout_weight="6.5"
                android:background="#dcdcdc"
                android:gravity="center"
                android:textColor="#222222" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#ffffff"
                android:layout_weight="4.2"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:padding="7dp">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageView25"
                    android:src="@drawable/lkj"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>