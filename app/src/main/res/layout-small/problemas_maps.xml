<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:background="#ede6e6"
    android:layout_height="fill_parent"
    >

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"

        android:visibility="visible"
        android:layout_alignParentBottom="true">


        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            tools:context=".MapaEncuestador" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_alignParentLeft="false"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/despliega1"
                        android:visibility="visible"
                        android:background="#eeffffff"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                    android:paddingBottom="10dp"
                    android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:paddingLeft="15dp" >

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Filtrar Zona"
                                android:id="@+id/textView67"
                                android:textStyle="bold"
                                android:layout_marginBottom="5dp"
                                android:layout_gravity="left|center"
                                android:gravity="center"
                                android:textSize="13sp"
                            android:layout_marginTop="5dp" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/close"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/xnegro"
                            android:background="#00ffffff" />

                    </RelativeLayout>

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"

                            android:layout_weight="4"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp">

                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="5">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Comuna"
                                android:id="@+id/textView32"
                                android:textStyle="bold"
                                android:layout_marginBottom="5dp"
                                android:layout_gravity="left|center"
                                android:gravity="center"
                                android:textSize="13sp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="7" />

                            <Spinner
                                    android:textAlignment="center"
                                    android:layout_width="fill_parent"

                                    android:layout_gravity="center"
                                    android:layout_height="30dp"
                                    android:id="@+id/spinner6"
                                    android:layout_weight="2"
                                    android:layout_margin="2dp"
                                    android:spinnerMode="dialog"
                                    android:background="@drawable/fondo"
                                    android:visibility="visible" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="5">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Barrio"
                                android:id="@+id/textView34"
                                android:textStyle="bold"
                                android:layout_marginBottom="5dp"
                                android:layout_gravity="left|center"
                                android:gravity="center"
                                android:textSize="13sp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="7" />

                            <Spinner

                                android:layout_height="30dp"
                                android:id="@+id/spinner4"
                                android:textAlignment="center"
                                android:layout_width="fill_parent"

                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:layout_margin="2dp"
                                android:spinnerMode="dialog"
                                style="@android:style/Animation.Dialog"
                                android:background="@drawable/fondo"
                                android:visibility="visible" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:layout_marginTop="8dp">

                            <Button
                                android:textColor="@drawable/button_back4"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Filtrar"
                                android:id="@+id/filtrar"
                                android:textAllCaps="false"
                                android:textSize="12sp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/despliega2"
                    android:visibility="visible"
                    android:background="#eeffffff"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/back" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:paddingLeft="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ranking de Problemáticas por zona"
                            android:id="@+id/textView66"
                            android:textStyle="bold"
                            android:layout_gravity="left|center"
                            android:layout_weight="1"
                            android:gravity="left|center_horizontal"
                            android:textSize="13sp"
                            android:layout_marginTop="5dp" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/close2"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/xnegro"
                            android:background="#00ffffff" />
                    </RelativeLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="2.8">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:id="@+id/textView52"
                                android:layout_weight="2"
                                android:textSize="12sp"
                                android:padding="3dp" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:id="@+id/textView53"
                                android:layout_weight="2"
                                android:textSize="12sp"
                                android:padding="3dp" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:id="@+id/textView54"
                                android:layout_weight="2"
                                android:textSize="12sp"
                                android:padding="3dp" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:id="@+id/textView55"
                                android:layout_weight="2"
                                android:textSize="12sp"
                                android:padding="3dp" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:id="@+id/textView56"
                                android:layout_weight="2"
                                android:textSize="12sp"
                                android:padding="3dp" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:id="@+id/textView57"
                                android:layout_weight="2"
                                android:textSize="12sp"
                                android:padding="3dp" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:id="@+id/textView58"
                                android:layout_weight="2"
                                android:textSize="12sp"
                                android:padding="3dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="6">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginRight="5dp">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:textAppearance="?android:attr/textAppearanceSmall"

                                    android:id="@+id/textView59"
                                    android:layout_weight="2"
                                    android:textSize="12sp"
                                    android:padding="3dp"
                                    android:textColor="@drawable/button_back7" />

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:textAppearance="?android:attr/textAppearanceSmall"

                                    android:id="@+id/textView60"
                                    android:layout_weight="2"
                                    android:textSize="12sp"
                                    android:padding="3dp"
                                    android:textColor="@drawable/button_back7" />

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:textAppearance="?android:attr/textAppearanceSmall"

                                    android:id="@+id/textView61"
                                    android:layout_weight="2"
                                    android:textSize="12sp"
                                    android:padding="3dp"
                                    android:textColor="@drawable/button_back7" />

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:textAppearance="?android:attr/textAppearanceSmall"

                                    android:id="@+id/textView62"
                                    android:layout_weight="2"
                                    android:textSize="12sp"
                                    android:padding="3dp"
                                    android:textColor="@drawable/button_back7" />

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:textAppearance="?android:attr/textAppearanceSmall"

                                    android:id="@+id/textView63"
                                    android:layout_weight="2"
                                    android:textSize="12sp"
                                    android:padding="3dp"
                                    android:textColor="@drawable/button_back7" />

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:textAppearance="?android:attr/textAppearanceSmall"

                                    android:id="@+id/textView64"
                                    android:layout_weight="2"
                                    android:textSize="12sp"
                                    android:padding="3dp"
                                    android:textColor="@drawable/button_back7" />

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:textAppearance="?android:attr/textAppearanceSmall"

                                    android:id="@+id/textView65"
                                    android:layout_weight="2"
                                    android:textSize="12sp"
                                    android:padding="3dp"
                                    android:textColor="@drawable/button_back7" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">

                                <ProgressBar
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:id="@+id/progressBar1"
                                    android:indeterminate="false"
                                    android:progress="1"
                                    android:max="100"
                                    android:layout_weight="2"
                                    android:padding="3dp" />

                                <ProgressBar
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:id="@+id/progressBar2"
                                    android:max="100"
                                    android:progress="1"
                                    android:layout_weight="2"
                                    android:padding="3dp" />

                                <ProgressBar
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:id="@+id/progressBar3"
                                    android:max="100"
                                    android:progress="1"
                                    android:layout_weight="2"
                                    android:padding="3dp" />

                                <ProgressBar
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:id="@+id/progressBar4"
                                    android:max="100"
                                    android:progress="1"
                                    android:layout_weight="2"
                                    android:padding="3dp" />

                                <ProgressBar
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:id="@+id/progressBar5"
                                    android:max="100"
                                    android:progress="1"
                                    android:layout_weight="2"
                                    android:padding="3dp" />

                                <ProgressBar
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:id="@+id/progressBar6"
                                    android:max="100"
                                    android:progress="1"
                                    android:layout_weight="2"
                                    android:padding="3dp" />

                                <ProgressBar
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:id="@+id/progressBar7"
                                    android:max="100"
                                    android:progress="1"
                                    android:layout_weight="2"
                                    android:padding="3dp" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>





